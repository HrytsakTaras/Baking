@model Baking.Data.Entities.User

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
	<div class="validation" asp-validation-summary="ModelOnly"></div>
	<div>
		<div>
			<label asp-for="Email">Enter Email</label><br />
			<input type="text" asp-for="Email" />
			<span asp-validation-for="Email" />
		</div>
		<div>
			<label asp-for="Password">Enter password</label><br />
			<input asp-for="Password" />
			<span asp-validation-for="Password" />
		</div>
		<div>
			<label asp-for="ConfirmPassword">Confirm password</label><br />
			<input asp-for="ConfirmPassword" />
			<span asp-validation-for="ConfirmPassword" />
		</div>
		<div>
			<label asp-for="Balance">Enter balance</label><br />
			<input asp-for="Balance" />
			<span asp-validation-for="Balance" />
		</div>
		<div>
			<input type="submit" value="Register" />
		</div>
	</div>
</form>